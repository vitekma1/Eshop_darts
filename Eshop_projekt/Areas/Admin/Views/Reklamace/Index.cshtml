@model DataAccess.Model.Reklamace
@{
    Layout = @"~\Areas\Admin\Views\Shared\_Layout.cshtml";
}

<!DOCTYPE html>
<h2>Reklamace</h2>
@if (TempData["message-success-reklamace"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["message-success-reklamace"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    </div>
}
@Html.ValidationSummary()

@using (Html.BeginForm("Add", "Reklamace", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <div>
        <label class="control-label">Popište důvod reklamace</label>
        <div>
            @Html.TextAreaFor(x => x.Popis, new { @class = "form-control" })
        </div>
    </div>
    <div>
        <label class="control-label">Číslo objednávaného produktu</label>
        <div>
            @Html.TextBoxFor(x => x.Id, new { @class = "form-control" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-sm-offset-2">
            <button type="submit" class="btn btn-default"><b>Odeslat reklamaci</b></button>
        </div>
    </div>

}