@model DataAccess.Model.ZpetnaVazba
@{
    Layout = @"~\Areas\Admin\Views\Shared\_Layout.cshtml";

}

<!DOCTYPE html>

<h2>Hodnocení</h2>
@if (TempData["message-success-hodnoceni"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["message-success-hodnoceni"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    </div>
}
@Html.ValidationSummary()

@using (Html.BeginForm("Add", "ZpetnaVazba", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <div>
        <label class=" control-label">Zde máte prostor pro zhodnocení vašich zkušeností s naším obchodem</label>
        <div>
            @Html.TextAreaFor(x => x.Zprava, new { @class = "form-control" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-sm-offset-2 ">
            <button type="submit" class="btn btn-default"><b>Poslat hodnocení</b></button>
        </div>
    </div>

}
