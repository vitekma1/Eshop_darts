@model DataAccess.Model.Zbozi
@{
    ViewBag.Title = "Detail";
    Layout = @"~\Areas\Admin\Views\Shared\_Layout.cshtml";
}

<style type="text/css">
    .bgimgg {
        background-image: url(https://131938-380190-raikfcquaxqncofqfm.stackpathdns.com/wp-content/uploads/2016/03/bulleye.jpg);
        background-size: cover;
    }

    .bgpic {
        background-image: url('../Content/bg.jpg');
        background-size: 160%;
    }
</style>

    <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bgimgg">
        <div class="col-md-5 p-lg-5 mx-auto my-5 bg-light">
            <img class="card-img-top" src=@Model.Obrazek width="200" height="350">
            <h2> @Model.Nazev</h2>
            <p><b>Cena:</b> @Model.Cena Kč</p>
            <p><b>Počet kusů na skladě:</b> @Model.Pocet Ks</p>
            <p><b>Druh zboží: </b>@Model.Druh.Nazev</p>
            <p><b>Popis: </b>@Model.Popis</p>

            <a class="text-black-50" href="@Url.Action("Index" , "Zbozi")">Pokračovat ve vybírání zboží..</a>

        </div>
        <div class="product-device box-shadow d-none d-md-block"></div>
        <div class="product-device product-device-2 box-shadow d-none d-md-block"></div>
    </div>
